<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <ul>
      <% messages.forEach(function(message) { %>
      <li>
        <strong><%= message.user %></strong> said: <%= message.text %>
        <em>(<%= message.added.toLocaleString() %>)</em>
      </li>
      <% }); %>
    </ul>

    <a href="/new">Add a New Message</a>
  </body>
</html>
