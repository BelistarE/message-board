<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <% if (theme) { %>
    <link rel="stylesheet" href="/css/<%= theme %>.css" />
    <% } %>
  </head>
  <body>
    <canvas id="heartCanvas"></canvas>
    <div class="content">
      <div class="settings-button">
        <img
          src="/images/icons/settings.svg"
          alt="Settings"
          id="settingsIcon"
        />
        <div class="dropdown-menu" id="dropdownMenu">
          <p>Theme</p>
          <a href="/theme/hacker">Hacker</a>
          <a href="/theme/counter-strike">Counter Strike</a>
          <a href="/theme/chill">Chill</a>
        </div>
      </div>
      <h1><%= title %></h1>
      <a href="/new">Add a New Message</a>
      <ul>
        <% messages.forEach(function(message) { %>
        <li>
          <strong style="color: <%= message.color %>">
            <%=`${message.user}:` %>
          </strong>
          <%= message.text %>
          <em>(<%= message.added.toLocaleString() %>)</em>
        </li>
        <% }); %>
      </ul>
    </div>
    <script src="/js/particles.js"></script>
    <script src="/js/main-script.js"></script>
  </body>
</html>
