<link rel="stylesheet" href="/css/style.css" />
<div class="form">
  <form action="/new" method="POST" class="forminput textform">
    <div class="top">
      <div class="section">
        <label for="messageUser">Your Name:</label>
        <input type="text" id="messageUser" name="messageUser" required />
      </div>

      <div class="section">
        <label for="color">Select a color for your username:</label>
        <input type="color" id="color" name="color" value="#ff0000" required />
      </div>
    </div>
    <label for="messageText">Message:</label>
    <textarea id="messageText" name="messageText" required></textarea>

    <button type="submit">Submit</button>
  </form>
</div>
